<div class="container">
  <%= back_button(presentation_surveys_path(@presentation)) %>
  <div class="row">
    <div class="col-md-12 text-center">
      <%= survey_option_buttons(@survey) %>
      <h1 class="text-center"><%= @survey.title %> Survey for '<%= @presentation.title %>'</h1>
    </div>
  </div>
  <!-- /.row -->

  <div class="row">
    <div class="col-md-8 col-md-offset-2 text-center">
      <%= link_to 'Add a Question',
          new_presentation_survey_question_path(@presentation, @survey),
          submit_path: presentation_survey_questions_path(@presentation, @survey),
          class: "btn btn-success"%>
      <hr />
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4><strong>Survey Title:</strong> <%= @survey.title %></h4>
        </div>
        <div class="table-responsive">
          <table class="table table-striped">
            <tr>
              <th>Questions on Survey</th>
              <th>Response Type</th>
              <th>Required?</th>
              <th>Actions</th>
            </tr>
            <% @questions.each do |question| %>
            <tr>
              <td>(<%= question.position %>) <%= question.prompt %></td>
              <td><%= question.response_type.capitalize %></td>
              <td><%= required_check(question) %></td>
              <td><%= action_buttons(edit_path: edit_presentation_survey_question_path(@presentation, @survey, question),
                                     delete_path: presentation_survey_question_path(@presentation, @survey, question)) %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
  <!-- /.row -->
</div>
<!--- /.container -->
