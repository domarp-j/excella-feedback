<div class="container">
  <%= back_button(presentation_surveys_path(@presentation)) %>
  <h1>Questions</h1>

  <p> INFO:
    <%= @survey.position %>
    <%= @survey.title %>
  </p>

  <h3>QUESTIONS</h3>
  <p><%= link_to "Create a New Question", new_presentation_survey_question_path(@survey.presentation_id, @survey.id) %></p>
    <% @survey.questions.each do |question| %>
      <ul>
        <li><%= question.position %>
        <%= question.prompt %>
        <%= question.response_type %>
        <%= link_to "Edit", edit_presentation_survey_question_path(@presentation.id, @survey.id, question.id) %>
        <%= link_to "Delete", presentation_survey_question_path(@presentation.id, @survey.id, question.id), method: :delete, data: { confirm: 'Are you sure you want to delete this question?' } %>
        </li>
      </ul>

    <% end %>

</div>
