<div class="row">
  <div class="col-lg-12">
    <%= content_tag :div, class: "panel #{panel_color}" do %>
      <div class="panel-heading">
        <h4><%= title %></h4>
      </div>
      <div class="table-responsive">
        <table class="table">
          <tr>
            <th class="col-md-3 col-sm-1">Title</th>
            <th class="col-md-2 col-sm-1">Date</th>
            <th class="col-md-1 col-sm-1">Location</th>
            <th class="col-md-3 col-sm-1">Description</th>
            <th class="col-md-3 col-sm-1"><%= feedback_header(current_user) %></th>
          </tr>
          <% presentations.each do |pre| %>
          <tr>
            <td><%= link_to pre.title, pre %></td>
            <td><%= display_date(pre.date) %></td>
            <td><%= pre.location %></td>
            <td><%= display_description(pre) %></td>
            <td><%= feedback_content(
                  user: current_user,
                  presentation: pre
                ) %></td>
          </tr>
          <% end %>
        </table>
      </div>
    <% end %>
  </div>
</div>
<!-- /.row -->
