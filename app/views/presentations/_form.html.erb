<div class="form">
  <%= form_for(presentation) do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :date %>
      <%= f.date_select :date %>

      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
