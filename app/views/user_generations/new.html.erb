<div class="container">
  <%= back_button %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <h2>Create New User</h2>

      <%= form_for(@user, as: :user, url: user_generations_path(@user)) do |f| %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control #{error_class(@user, :email)}", placeholder: "email@address.com" %>
          <%= error_messages(@user, :email) %>
        </div>

        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, class: "form-control #{error_class(@user, :first_name)}", placeholder: "First" %>
          <%= error_messages(@user, :first_name) %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, class: "form-control #{error_class(@user, :last_name)}", placeholder: "Last" %>
          <%= error_messages(@user, :last_name) %>
        </div>

        <%= f.submit "Create User", class: "btn btn-default" %>

      <% end %>

    </div>
  </div>
</div>
